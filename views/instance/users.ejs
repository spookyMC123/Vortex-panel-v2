                <%- include('../components/template') %>
                <main id="content">
                    <style>
                        .subuser-list {
                            display: block;
                            margin-top: 1rem;
                        }

                        .subuser-list-item {
                            display: flex;
                            align-items: center;
                            padding: 0.75rem 1rem;
                            border-radius: 0.5rem;
                            transition: all 0.2s ease;
                            cursor: pointer;
                            margin-bottom: 0.5rem;
                            background-color: rgba(255, 255, 255, 0.03);
                        }

                        .subuser-list-item:hover {
                            background-color: rgba(255, 255, 255, 0.08);
                        }

                        .subuser-list-item .icon {
                            margin-right: 0.75rem;
                            color: #a5b4fc;
                        }

                        .subuser-list-item .name {
                            flex-grow: 1;
                            color: #e5e7eb;
                            font-weight: 500;
                        }

                        .subuser-list-item .user-id {
                            color: #9ca3af;
                            font-size: 0.875rem;
                            margin-right: 1rem;
                            font-family: monospace;
                        }

                        .modal-overlay {
                            position: fixed;
                            top: 0;
                            left: 0;
                            right: 0;
                            bottom: 0;
                            background-color: rgba(0, 0, 0, 0.7);
                            display: flex;
                            align-items: center;
                            justify-content: center;
                            opacity: 0;
                            visibility: hidden;
                            transition: opacity 0.3s ease, visibility 0.3s ease;
                            z-index: 100;
                            backdrop-filter: blur(5px);
                        }

                        .modal-overlay.active {
                            opacity: 1;
                            visibility: visible;
                        }

                        .modal-content {
                            background: #1e293b;
                            border-radius: 1rem;
                            width: 100%;
                            max-width: 28rem;
                            padding: 1.5rem;
                            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.3);
                            transform: scale(0.95);
                            transition: transform 0.3s ease, opacity 0.3s ease;
                            opacity: 0;
                            border: 1px solid rgba(255, 255, 255, 0.1);
                        }

                        .modal-overlay.active .modal-content {
                            transform: scale(1);
                            opacity: 1;
                        }

                        .empty-state {
                            text-align: center;
                            padding: 2rem 0;
                        }

                        .empty-state-icon {
                            width: 5rem;
                            height: 5rem;
                            margin: 0 auto 1rem;
                            background: rgba(16, 185, 129, 0.1);
                            border-radius: 50%;
                            display: flex;
                            align-items: center;
                            justify-content: center;
                        }

                        .empty-state-icon svg {
                            width: 2.5rem;
                            height: 2.5rem;
                            color: #10b981;
                        }

                        .empty-state-title {
                            font-size: 1.25rem;
                            font-weight: 600;
                            margin-bottom: 0.5rem;
                            color: white;
                        }

                        .empty-state-description {
                            color: #9ca3af;
                            max-width: 24rem;
                            margin: 0 auto;
                        }

                        .btn {
                            transition: all 0.2s ease;
                            display: inline-flex;
                            align-items: center;
                            justify-content: center;
                        }

                        .btn:active {
                            transform: scale(0.98);
                        }

                        .btn-primary {
                            background-color: #4f46e5;
                            color: white;
                            padding: 0.5rem 1.25rem;
                            border-radius: 0.5rem;
                            font-weight: 500;
                        }

                        .btn-primary:hover {
                            background-color: #4338ca;
                        }

                        .btn-secondary {
                            background-color: #374151;
                            color: white;
                            padding: 0.5rem 1.25rem;
                            border-radius: 0.5rem;
                            font-weight: 500;
                        }

                        .btn-secondary:hover {
                            background-color: #3f4a5a;
                        }

                        .btn-danger {
                            background-color: #dc2626;
                            color: white;
                            padding: 0.375rem 1rem;
                            border-radius: 9999px;
                            font-weight: 500;
                            font-size: 0.875rem;
                        }

                        .btn-danger:hover {
                            background-color: #b91c1c;
                        }

                        .form-input {
                            width: 100%;
                            padding: 0.625rem 0.875rem;
                            background-color: rgba(255, 255, 255, 0.05);
                            border: 1px solid rgba(255, 255, 255, 0.1);
                            border-radius: 0.5rem;
                            color: white;
                            transition: border-color 0.2s ease;
                        }

                        .form-input:focus {
                            outline: none;
                            border-color: #4f46e5;
                            box-shadow: 0 0 0 2px rgba(79, 70, 229, 0.2);
                        }

                        .form-label {
                            display: block;
                            margin-bottom: 0.5rem;
                            color: #d1d5db;
                            font-size: 0.875rem;
                            font-weight: 500;
                        }

                        .action-bar {
                            display: flex;
                            justify-content: space-between;
                            align-items: center;
                            margin-bottom: 1.5rem;
                        }

                        .action-title {
                            font-size: 1.25rem;
                            font-weight: 600;
                            color: white;
                        }
                    </style>

                    <%- include('../components/instance') %>

                    <div class="bg-gray-800/50 rounded-xl p-6 mb-6 border border-gray-700/50">
                        <div class="action-bar">
                            <h2 class="action-title">Subusers</h2>
                            <button id="addSubuser" class="btn btn-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1.5" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
                                </svg>
                                Add Subuser
                            </button>
                        </div>

                        <div class="subuser-list">
                            <% if (users.length === 0) { %>
                                <div class="empty-state">
                                    <div class="empty-state-icon">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                                        </svg>
                                    </div>
                                    <h3 class="empty-state-title">No Subusers Found</h3>
                                    <p class="empty-state-description">Add subusers to grant them access to manage your server</p>
                                </div>
                            <% } else { %>
                                <% users.forEach(function(user) { %>
                                    <div class="subuser-list-item">
                                        <div class="icon">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                            </svg>
                                        </div>
                                        <span class="name"><%= user.username %></span>
                                        <span class="user-id"><%= user.userId %></span>
                                        <button class="btn btn-danger" onclick="location.href='/instance/<%= req.params.id %>/users/remove/<%= user.username %>'">
                                            Remove
                                        </button>
                                    </div>
                                <% }); %>
                            <% } %>
                        </div>
                    </div>

                    <!-- Add Subuser Modal -->
                    <div id="add-subuser-modal" class="modal-overlay">
                        <div class="modal-content">
                            <h3 class="text-xl font-semibold mb-4 text-white">Add Subuser</h3>
                            <form id="add-subuser-form">
                                <div class="mb-4">
                                    <label for="username" class="form-label">Username</label>
                                    <input type="text" id="username" name="username" required class="form-input" placeholder="Enter username">
                                </div>
                                <div class="flex justify-end space-x-2">
                                    <button type="button" id="cancel-add" class="btn btn-secondary">Cancel</button>
                                    <button type="submit" class="btn btn-primary">Add Subuser</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </main>

                <script>
                    // Modal handling
                    function showModal(modalId) {
                        const modal = document.getElementById(modalId);
                        modal.classList.add('active');
                        document.body.style.overflow = 'hidden';
                    }

                    function closeModal(modalId) {
                        const modal = document.getElementById(modalId);
                        modal.classList.remove('active');
                        document.body.style.overflow = '';
                    }

                    // Event listeners
                    document.getElementById('addSubuser').addEventListener('click', () => {
                        showModal('add-subuser-modal');
                    });

                    document.getElementById('cancel-add').addEventListener('click', () => {
                        closeModal('add-subuser-modal');
                    });

                    // Close modal when clicking outside
                    document.addEventListener('click', (e) => {
                        if (e.target.classList.contains('modal-overlay')) {
                            closeModal('add-subuser-modal');
                        }
                    });

                    // Form submission
                    document.getElementById('add-subuser-form').addEventListener('submit', async (e) => {
                        e.preventDefault();
                        const username = document.getElementById('username').value.trim();
                        const currentUsername = '<%= req.user.username %>';

                        if (!username) {
                            alert("Please enter a username");
                            return;
                        }

                        if (username === currentUsername) {
                            alert("You cannot add yourself as a subuser.");
                            return;
                        }

                        try {
                            const response = await fetch(`/instance/<%= req.params.id %>/users/add`, {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json',
                                },
                                body: JSON.stringify({ username })
                            });

                            if (response.ok) {
                                closeModal('add-subuser-modal');
                                window.location.reload();
                            } else {
                                const errorData = await response.json();
                                throw new Error(errorData.message || 'Failed to add subuser');
                            }
                        } catch (error) {
                            console.error('Error adding subuser:', error);
                            alert(error.message || 'An error occurred while adding the subuser. Please try again.');
                        }
                    });

                    // Initialize tooltips
                    document.addEventListener("DOMContentLoaded", function() {
                        // Add any initialization code here if needed
                    });
                </script>
