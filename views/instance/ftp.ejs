<%- include('../components/template') %>
<main id="content">
  <br>
  <%- include('../components/instance') %>
  <div class="p-6 bg-gray-900/50 shadow-xl border border-gray-700 rounded-xl overflow-hidden backdrop-blur-sm lg:p-8 mx-auto card" style="width: 940px; max-width: 95%;">
    <div class="flex flex-col md:flex-row gap-6">
      <div class="w-full md:w-1/2">
        <h2 class="text-lg font-semibold text-white tracking-tight mb-6 flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
          FTP Connection Details
        </h2>
        
        <div class="space-y-5">
          <div>
            <label class="block text-gray-400 text-sm font-medium mb-2">Server Address</label>
            <div class="relative">
              <input 
                type="text" 
                readonly 
                value="ftp://<%- logindata.host %>:<%- logindata.port %>" 
                class="w-full bg-gray-800/60 border border-gray-700 rounded-lg py-2.5 px-4 text-white text-sm font-mono focus:outline-none focus:ring-2 focus:ring-emerald-500/50 focus:border-transparent cursor-pointer hover:bg-gray-800 transition"
                onclick="copyToClipboard(this)"
              >
              <button class="absolute right-2.5 top-2.5 text-gray-400 hover:text-white transition" onclick="copyToClipboard(this.previousElementSibling)">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M8 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z" />
                  <path d="M6 3a2 2 0 00-2 2v11a2 2 0 002 2h8a2 2 0 002-2V5a2 2 0 00-2-2 3 3 0 01-3 3H9a3 3 0 01-3-3z" />
                </svg>
              </button>
            </div>
          </div>
          
          <div>
            <label class="block text-gray-400 text-sm font-medium mb-2">Username</label>
            <div class="relative">
              <input 
                type="text" 
                readonly 
                value="<%- logindata.username %>" 
                class="w-full bg-gray-800/60 border border-gray-700 rounded-lg py-2.5 px-4 text-white text-sm font-mono focus:outline-none focus:ring-2 focus:ring-emerald-500/50 focus:border-transparent cursor-pointer hover:bg-gray-800 transition"
                onclick="copyToClipboard(this)"
              >
              <button class="absolute right-2.5 top-2.5 text-gray-400 hover:text-white transition" onclick="copyToClipboard(this.previousElementSibling)">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M8 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z" />
                  <path d="M6 3a2 2 0 00-2 2v11a2 2 0 002 2h8a2 2 0 002-2V5a2 2 0 00-2-2 3 3 0 01-3 3H9a3 3 0 01-3-3z" />
                </svg>
              </button>
            </div>
          </div>
          
          <div>
            <label class="block text-gray-400 text-sm font-medium mb-2">Password</label>
            <div class="relative">
              <input 
                type="password" 
                readonly 
                value="<%- logindata.password %>" 
                class="w-full bg-gray-800/60 border border-gray-700 rounded-lg py-2.5 px-4 text-white text-sm font-mono focus:outline-none focus:ring-2 focus:ring-emerald-500/50 focus:border-transparent cursor-pointer hover:bg-gray-800 transition password-field"
                onmouseover="this.type='text'"
                onmouseout="this.type='password'"
                onclick="copyToClipboard(this)"
              >
              <button class="absolute right-2.5 top-2.5 text-gray-400 hover:text-white transition" onclick="copyToClipboard(this.previousElementSibling)">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M8 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z" />
                  <path d="M6 3a2 2 0 00-2 2v11a2 2 0 002 2h8a2 2 0 002-2V5a2 2 0 00-2-2 3 3 0 01-3 3H9a3 3 0 01-3-3z" />
                </svg>
              </button>
              <button class="absolute right-9 top-2.5 text-gray-400 hover:text-white transition toggle-password" onclick="togglePasswordVisibility(this)">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                  <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                </svg>
              </button>
            </div>
          </div>
          
          <div class="pt-2 flex flex-wrap gap-3">
            <button 
              class="bg-emerald-600 hover:bg-emerald-700 text-white font-medium py-2.5 px-5 rounded-lg transition flex items-center gap-2 hover:scale-[0.98] active:scale-95"
              onclick="loginToWinSCP()"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z" clip-rule="evenodd" />
              </svg>
              Connect via FTP Client
            </button>
            
            <button 
              class="bg-gray-700 hover:bg-gray-600 text-white font-medium py-2.5 px-5 rounded-lg transition flex items-center gap-2 hover:scale-[0.98] active:scale-95"
              onclick="showConnectionHelp()"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
              </svg>
              Connection Help
            </button>
          </div>
        </div>
      </div>
      
      <div class="w-full md:w-1/2">
        <div class="bg-gray-800/30 border border-gray-700 rounded-lg p-5 h-full">
          <h3 class="text-white font-medium mb-4 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
            </svg>
            Quick Setup Guide
          </h3>
          
          <div class="space-y-4 text-gray-300 text-sm">
            <div class="flex gap-3">
              <div class="bg-emerald-900/30 text-emerald-400 rounded-full w-5 h-5 flex items-center justify-center flex-shrink-0 mt-0.5 text-xs font-bold">1</div>
              <p>Use the connection details on the left to configure your FTP client (FileZilla, WinSCP, etc.)</p>
            </div>
            
            <div class="flex gap-3">
              <div class="bg-emerald-900/30 text-emerald-400 rounded-full w-5 h-5 flex items-center justify-center flex-shrink-0 mt-0.5 text-xs font-bold">2</div>
              <p>For security, your password is hidden by default. Hover over it to view or click the eye icon.</p>
            </div>
            
            <div class="flex gap-3">
              <div class="bg-emerald-900/30 text-emerald-400 rounded-full w-5 h-5 flex items-center justify-center flex-shrink-0 mt-0.5 text-xs font-bold">3</div>
              <p>Click any field to copy its contents to your clipboard automatically.</p>
            </div>
            
            <div class="flex gap-3">
              <div class="bg-emerald-900/30 text-emerald-400 rounded-full w-5 h-5 flex items-center justify-center flex-shrink-0 mt-0.5 text-xs font-bold">4</div>
              <p>Use the "Connect" button to launch your default FTP client with these settings.</p>
            </div>
          </div>
          
          <div class="mt-6 pt-4 border-t border-gray-700/50">
            <h4 class="text-white font-medium text-sm mb-2">Recommended Clients</h4>
            <div class="flex flex-wrap gap-2">
              <a href="https://filezilla-project.org/" target="_blank" class="text-xs bg-gray-700 hover:bg-gray-600 text-white px-3 py-1.5 rounded-lg transition flex items-center gap-1.5">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                FileZilla
              </a>
              <a href="https://winscp.net/" target="_blank" class="text-xs bg-gray-700 hover:bg-gray-600 text-white px-3 py-1.5 rounded-lg transition flex items-center gap-1.5">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                WinSCP
              </a>
              <a href="https://cyberduck.io/" target="_blank" class="text-xs bg-gray-700 hover:bg-gray-600 text-white px-3 py-1.5 rounded-lg transition flex items-center gap-1.5">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Cyberduck
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<%- include('../components/footer') %>

<script>
  // Improved copy function with feedback
  function copyToClipboard(element) {
    const text = element.value;
    navigator.clipboard.writeText(text).then(() => {
      const originalText = element.value;
      element.value = 'Copied!';
      element.classList.add('text-emerald-400');
      setTimeout(() => {
        element.value = originalText;
        element.classList.remove('text-emerald-400');
      }, 1500);
    }).catch(err => {
      console.error('Failed to copy: ', err);
    });
  }

  // Toggle password visibility
  function togglePasswordVisibility(button) {
    const input = button.parentElement.querySelector('input');
    const isPassword = input.type === 'password';
    input.type = isPassword ? 'text' : 'password';
    button.innerHTML = isPassword ? 
      `<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M3.707 2.293a1 1 0 00-1.414 1.414l14 14a1 1 0 001.414-1.414l-1.473-1.473A10.014 10.014 0 0019.542 10C18.268 5.943 14.478 3 10 3a9.958 9.958 0 00-4.512 1.074l-1.78-1.781zm4.261 4.26l1.514 1.515a2.003 2.003 0 012.45 2.45l1.514 1.514a4 4 0 00-5.478-5.478z" clip-rule="evenodd" />
        <path d="M12.454 16.697L9.75 13.992a4 4 0 01-3.742-3.741L2.335 6.578A9.98 9.98 0 00.458 10c1.274 4.057 5.065 7 9.542 7 .847 0 1.669-.105 2.454-.303z" />
      </svg>` : 
      `<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
        <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
      </svg>`;
  }

  // Connect via FTP client
  function loginToWinSCP() {
    const username = "<%- logindata.username %>";
    const password = "<%- logindata.password %>";
    const hostname = "<%- logindata.host %>";
    const port = "<%- logindata.port %>";

    const winscpUrl = `ftp://${username}:${password}@${hostname}:${port}`;
    window.open(winscpUrl, '_blank');
  }

  // Show connection help
  function showConnectionHelp() {
    alert('For connection help:\n\n1. Use the provided FTP details\n2. Port is typically 21 for FTP\n3. Use SFTP/FTPS if your server supports it\n4. Contact support if you encounter issues');
  }
</script>
