<%- include('../../components/template') %>

<main id="content" class="pb-10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="bg-transparent pt-8 pb-6">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div class="flex-1 min-w-0">
          <h1 class="text-2xl font-bold leading-7 text-white sm:text-3xl sm:truncate">
            <%= req.translations.settings %>
          </h1>
          <p class="mt-2 text-sm text-neutral-400 max-w-2xl">
            <%= req.translations.changeSettings %>
            <span class="hidden sm:inline-block">Â·</span>
            <span class="block sm:inline-block sm:ml-2">Customize your panel's appearance and behavior.</span>
          </p>
        </div>
        <div class="mt-4 sm:mt-0 sm:ml-4">
          <button type="button" class="inline-flex items-center px-4 py-2 rounded-md <%= theme['button-color'] %> text-sm font-medium shadow-sm transition-colors hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-[#1f1e1e]">
            <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd" />
            </svg>
            Reset to Defaults
          </button>
        </div>
      </div>
    </div>

    <%- include('../../components/settings') %>

    <!-- Theme Settings Card -->
    <div class="bg-white/5 rounded-xl shadow overflow-hidden mt-8">
      <div class="px-6 py-5 border-b border-white/10 flex items-center justify-between">
        <h2 class="text-lg font-medium text-white">
          <svg class="inline-block mr-2 h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
          </svg>
          Theme Customization
        </h2>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-900 text-blue-100">
          Preview Available
        </span>
      </div>
      
      <div class="px-6 py-6 grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
        <!-- Button Color -->
        <div class="space-y-4">
          <div>
            <h3 class="text-sm font-medium text-white">Button Style</h3>
            <p class="text-xs text-neutral-400 mt-1">Choose your primary button color scheme</p>
          </div>
          
          <form action="/admin/settings/change/theme/button-color" method="POST" class="space-y-4">
            <div class="grid grid-cols-3 gap-3">
              <label class="relative block cursor-pointer">
                <input type="radio" name="buttoncolor" value="bg-white hover:bg-neutral-300 text-neutral-800" class="peer sr-only" <%= theme['button-color'] == 'bg-white hover:bg-neutral-300 text-neutral-800' ? 'checked' : '' %>>
                <div class="rounded-lg bg-white text-neutral-800 p-3 text-center text-sm font-medium peer-checked:ring-2 peer-checked:ring-blue-500 peer-checked:ring-offset-2 peer-checked:ring-offset-[#1f1e1e]">
                  White
                </div>
              </label>
              
              <label class="relative block cursor-pointer">
                <input type="radio" name="buttoncolor" value="bg-blue-500 hover:bg-blue-600 text-neutral-100" class="peer sr-only" <%= theme['button-color'] == 'bg-blue-500 hover:bg-blue-600 text-neutral-100' ? 'checked' : '' %>>
                <div class="rounded-lg bg-blue-500 text-white p-3 text-center text-sm font-medium peer-checked:ring-2 peer-checked:ring-blue-500 peer-checked:ring-offset-2 peer-checked:ring-offset-[#1f1e1e]">
                  Blue
                </div>
              </label>
              
              <label class="relative block cursor-pointer">
                <input type="radio" name="buttoncolor" value="bg-pink-500 hover:bg-pink-600 text-neutral-100" class="peer sr-only" <%= theme['button-color'] == 'bg-pink-500 hover:bg-pink-600 text-neutral-100' ? 'checked' : '' %>>
                <div class="rounded-lg bg-pink-500 text-white p-3 text-center text-sm font-medium peer-checked:ring-2 peer-checked:ring-blue-500 peer-checked:ring-offset-2 peer-checked:ring-offset-[#1f1e1e]">
                  Pink
                </div>
              </label>
            </div>
            
            <button type="submit" class="w-full rounded-lg <%= theme['button-color'] %> px-4 py-2 text-sm font-medium shadow-sm transition-colors hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-[#1f1e1e]">
              Save Button Style
            </button>
          </form>
        </div>

        <!-- Panel Theme -->
        <div class="space-y-4">
          <div>
            <h3 class="text-sm font-medium text-white">Panel Theme</h3>
            <p class="text-xs text-neutral-400 mt-1">Select your preferred background theme</p>
          </div>
          
          <form action="/admin/settings/change/theme/paneltheme-color" method="POST" class="space-y-4">
            <div class="grid grid-cols-2 gap-3">
              <label class="relative block cursor-pointer">
                <input type="radio" name="paneltheme" value="bg-[#1f1e1e]" class="peer sr-only" <%= theme['paneltheme-color'] == 'bg-[#1f1e1e]' ? 'checked' : '' %>>
                <div class="rounded-lg bg-[#1f1e1e] h-16 flex items-center justify-center peer-checked:ring-2 peer-checked:ring-blue-500 peer-checked:ring-offset-2 peer-checked:ring-offset-[#1f1e1e]">
                  <span class="text-xs text-white">Dark</span>
                </div>
              </label>
              
              <label class="relative block cursor-pointer">
                <input type="radio" name="paneltheme" value="bg-sky-950" class="peer sr-only" <%= theme['paneltheme-color'] == 'bg-sky-950' ? 'checked' : '' %>>
                <div class="rounded-lg bg-sky-950 h-16 flex items-center justify-center peer-checked:ring-2 peer-checked:ring-blue-500 peer-checked:ring-offset-2 peer-checked:ring-offset-[#1f1e1e]">
                  <span class="text-xs text-white">Sky Blue</span>
                </div>
              </label>
              
              <label class="relative block cursor-pointer">
                <input type="radio" name="paneltheme" value="bg-fuchsia-950" class="peer sr-only" <%= theme['paneltheme-color'] == 'bg-fuchsia-950' ? 'checked' : '' %>>
                <div class="rounded-lg bg-fuchsia-950 h-16 flex items-center justify-center peer-checked:ring-2 peer-checked:ring-blue-500 peer-checked:ring-offset-2 peer-checked:ring-offset-[#1f1e1e]">
                  <span class="text-xs text-white">Fuchsia</span>
                </div>
              </label>
              
              <label class="relative block cursor-pointer">
                <input type="radio" name="paneltheme" value="bg-[#33404d]" class="peer sr-only" <%= theme['paneltheme-color'] == 'bg-[#33404d]' ? 'checked' : '' %>>
                <div class="rounded-lg bg-[#33404d] h-16 flex items-center justify-center peer-checked:ring-2 peer-checked:ring-blue-500 peer-checked:ring-offset-2 peer-checked:ring-offset-[#1f1e1e]">
                  <span class="text-xs text-white">Pterodactyl</span>
                </div>
              </label>
            </div>
            
            <button type="submit" class="w-full rounded-lg <%= theme['button-color'] %> px-4 py-2 text-sm font-medium shadow-sm transition-colors hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-[#1f1e1e]">
              Save Panel Theme
            </button>
          </form>
        </div>

        <!-- Footer Toggle -->
        <div class="space-y-4">
          <div>
            <h3 class="text-sm font-medium text-white">Footer Credits</h3>
            <p class="text-xs text-neutral-400 mt-1">Display Skyport branding in the footer</p>
          </div>
          
          <form action="/admin/settings/toggle/theme/footer" method="POST" class="space-y-4">
            <div class="flex items-center justify-between rounded-lg bg-white/5 p-4">
              <span class="text-sm font-medium text-white">Show Footer Credits</span>
              <% if (settings.footer === true) { %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-900 text-green-100">
                  Enabled
                </span>
              <% } else { %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-900 text-red-100">
                  Disabled
                </span>
              <% } %>
            </div>
            
            <div class="flex space-x-3">
              <% if (settings.footer === true) { %>
                <button type="submit" name="action" value="disable" class="flex-1 rounded-lg bg-red-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-red-500 transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-[#1f1e1e] focus:ring-red-500">
                  Disable
                </button>
              <% } else { %>
                <button type="submit" name="action" value="enable" class="flex-1 rounded-lg bg-green-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-green-500 transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-[#1f1e1e] focus:ring-green-500">
                  Enable
                </button>
              <% } %>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Preview Section -->
    <div class="mt-8 bg-white/5 rounded-xl shadow overflow-hidden">
      <div class="px-6 py-5 border-b border-white/10">
        <h2 class="text-lg font-medium text-white">
          <svg class="inline-block mr-2 h-5 w-5 text-purple-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
            <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
          </svg>
          Live Preview
        </h2>
      </div>
      <div class="px-6 py-6">
        <div class="<%= theme['paneltheme-color'] %> rounded-lg p-6 shadow-inner">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-medium text-white">Example Panel</h3>
            <button class="rounded-md <%= theme['button-color'] %> px-3 py-1.5 text-sm font-medium shadow-sm">
              Sample Button
            </button>
          </div>
          <div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div class="bg-white/5 rounded-lg p-4">
              <h4 class="text-sm font-medium text-white">Server Status</h4>
              <p class="mt-1 text-xs text-neutral-400">All systems operational</p>
            </div>
            <div class="bg-white/5 rounded-lg p-4">
              <h4 class="text-sm font-medium text-white">Recent Activity</h4>
              <p class="mt-1 text-xs text-neutral-400">No new notifications</p>
            </div>
          </div>
          <% if (settings.footer === true) { %>
            <div class="mt-6 pt-4 border-t border-white/10 text-center text-xs text-neutral-400">
              Powered by Skyport Control Panel
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('../../components/footer') %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Logo upload toggle
    const useImageCheckbox = document.getElementById('useImage');
    const imageUploadBox = document.getElementById('imageUploadBox');
    const logoButton = document.getElementById('logoButton');
    const logoType = document.getElementById('logoType');
    
    if (useImageCheckbox) {
      useImageCheckbox.addEventListener('change', function() {
        if (this.checked) {
          imageUploadBox.classList.remove('hidden');
          logoButton.textContent = '<%= req.translations.saveNewLogo %>';
          logoType.value = 'image';
        } else {
          imageUploadBox.classList.add('hidden');
          logoButton.textContent = '<%= req.translations.removeLogo %>';
          logoType.value = 'none';
        }
      });
    }

    // Theme preview buttons
    const themeRadios = document.querySelectorAll('input[type="radio"][name="buttoncolor"], input[type="radio"][name="paneltheme"]');
    themeRadios.forEach(radio => {
      radio.addEventListener('change', function() {
        // You could add live preview updates here without page reload
        // For now just adding visual feedback
        this.closest('form').querySelector('button[type="submit"]').classList.add('animate-pulse');
        setTimeout(() => {
          this.closest('form').querySelector('button[type="submit"]').classList.remove('animate-pulse');
        }, 1000);
      });
    });
  });
</script>
