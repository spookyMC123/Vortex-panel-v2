<%- include('../../components/admin_template') %>

<main id="content" class="px-6 py-8 animate-fade-in">
   <div class="max-w-7xl mx-auto">
      <!-- Header Section -->
      <div class="mb-8">
         <div class="flex flex-col space-y-2">
            <h1 class="text-2xl font-bold text-white animate-slide-down">
               <%= req.translations.settings %>
            </h1>
            <p class="text-neutral-400 animate-fade-in">
            </p>
         </div>
      </div>
      
      <%- include('../../components/settings') %>
      
      <!-- General Settings Card -->
      <div class="bg-gradient-to-br from-white/5 to-white/[0.02] backdrop-blur-sm border border-white/10 rounded-xl shadow-2xl overflow-hidden animate-scale-in transition-all duration-300 hover:shadow-blue-500/10">
         <!-- Card Header -->
         <div class="px-6 py-4 border-b border-white/10 bg-gradient-to-r from-blue-500/10 to-transparent">
            <h2 class="text-lg font-semibold text-white flex items-center">
               <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
               </svg>
               <%= req.translations.general %>
            </h2>
         </div>
         
         <!-- Settings Grid -->
         <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 p-6">
            <!-- Panel Name Setting -->
            <div class="bg-white/5 rounded-lg p-5 border border-white/10 hover:border-blue-400/30 transition-all duration-300 animate-fade-in">
               <form action="/admin/settings/change/name" method="POST">
                  <div class="mb-4">
                     <label class="block text-sm font-medium text-neutral-300 mb-2" for="name">
                        <%= req.translations.panelName %>
                     </label>
                     <div class="relative">
                        <input id="name" name="name" type="text" 
                           class="w-full px-4 py-2.5 bg-white/5 text-white rounded-lg border border-white/10 focus:ring-2 focus:ring-blue-500 focus:border-transparent placeholder-white/30 transition-all duration-200" 
                           value="<%= name %>" 
                           placeholder="<%= req.translations.panelName %>" 
                           required>
                     </div>
                  </div>
                  <button type="submit" 
                     class="w-full flex justify-center items-center py-2.5 px-4 bg-blue-600 hover:bg-blue-500 text-white font-medium rounded-lg transition-all duration-200 transform hover:scale-[1.02] active:scale-95 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900">
                     <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M7.707 10.293a1 1 0 10-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 11.586V6h5a2 2 0 012 2v7a2 2 0 01-2 2H4a2 2 0 01-2-2V8a2 2 0 012-2h5v5.586l-1.293-1.293zM9 4a1 1 0 012 0v2H9V4z" />
                     </svg>
                     <%= req.translations.save %>
                  </button>
               </form>
            </div>
            
            <!-- Panel Logo Setting -->
            <div class="bg-white/5 rounded-lg p-5 border border-white/10 hover:border-blue-400/30 transition-all duration-300 animate-fade-in">
               <form action="/admin/settings/change/logo" method="POST" enctype="multipart/form-data">
                  <div class="mb-4">
                     <label class="block text-sm font-medium text-neutral-300 mb-2" for="logo">
                        <%= req.translations.panelLogo %>
                     </label>
                     
                     <div class="flex items-center mb-3">
                        <input id="useImage" name="useImage" type="checkbox" 
                           class="h-4 w-4 text-blue-500 bg-white/5 border-white/10 rounded focus:ring-blue-500 focus:ring-offset-gray-900">
                        <label for="useImage" class="ml-2 text-sm text-neutral-300">
                           <%= req.translations.image %>
                        </label>
                     </div>
                     
                     <div id="imageUploadBox" class="hidden mt-3 animate-scale-in">
                        <div class="flex items-center justify-center w-full">
                           <label for="logo" class="flex flex-col items-center justify-center w-full h-32 border-2 border-white/10 border-dashed rounded-lg cursor-pointer bg-white/5 hover:bg-white/10 transition-colors duration-200">
                              <div class="flex flex-col items-center justify-center pt-5 pb-6">
                                 <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white/50 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                 </svg>
                                 <p class="text-sm text-white/70"><%= req.translations.uploadLogo %></p>
                              </div>
                              <input id="logo" name="logo" type="file" accept="image/*" class="hidden">
                           </label>
                        </div>
                     </div>
                     <input type="hidden" name="type" id="logoType" value="none">
                  </div>
                  <button id="logoButton" type="submit" 
                     class="w-full flex justify-center items-center py-2.5 px-4 bg-red-600 hover:bg-red-500 text-white font-medium rounded-lg transition-all duration-200 transform hover:scale-[1.02] active:scale-95 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 focus:ring-offset-gray-900">
                     <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M4 2a2 2 0 00-2 2v11a3 3 0 106 0V4a2 2 0 00-2-2H4zm1 14a1 1 0 100-2 1 1 0 000 2zm5-1.757l4.9-4.9a2 2 0 000-2.828L13.485 5.1a2 2 0 00-2.828 0L10 5.757v8.486zM16 18H9.071l6-6H16a2 2 0 012 2v2a2 2 0 01-2 2z" clip-rule="evenodd" />
                     </svg>
                     <%= req.translations.removeLogo %>
                  </button>
               </form>
            </div>
            
            <!-- Registration Toggle -->
            <div class="bg-white/5 rounded-lg p-5 border border-white/10 hover:border-blue-400/30 transition-all duration-300 animate-fade-in">
               <form action="/admin/settings/toggle/register" method="POST">
                  <div class="mb-4">
                     <label class="block text-sm font-medium text-neutral-300 mb-2">
                        <%= req.translations.registerPage %>
                     </label>
                     <div class="flex items-center">
                        <% if (settings.register === true) { %>
                           <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-900/50 text-green-400">
                              <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" viewBox="0 0 20 20" fill="currentColor">
                                 <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                              </svg>
                              <%= req.translations.enabled %>
                           </span>
                        <% } else { %>
                           <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-900/50 text-red-400">
                              <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" viewBox="0 0 20 20" fill="currentColor">
                                 <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                              </svg>
                              <%= req.translations.disabled %>
                           </span>
                        <% } %>
                     </div>
                     <p class="mt-2 text-xs text-white/50">
                        <% if (settings.register) { %>
                           <%= req.translations.registerEnabledDesc %>
                        <% } else { %>
                           <%= req.translations.registerDisabledDesc %>
                        <% } %>
                     </p>
                  </div>
                  <button type="submit" 
                     class="w-full flex justify-center items-center py-2.5 px-4 <% if (settings.register) { %> bg-red-600 hover:bg-red-500 <% } else { %> bg-green-600 hover:bg-green-500 <% } %> text-white font-medium rounded-lg transition-all duration-200 transform hover:scale-[1.02] active:scale-95 focus:outline-none focus:ring-2 <% if (settings.register) { %> focus:ring-red-500 <% } else { %> focus:ring-green-500 <% } %> focus:ring-offset-2 focus:ring-offset-gray-900">
                     <% if (settings.register) { %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                           <path fill-rule="evenodd" d="M13.477 14.89A6 6 0 015.11 6.524l8.367 8.368zm1.414-1.414L6.524 5.11a6 6 0 018.367 8.367zM18 10a8 8 0 11-16 0 8 8 0 0116 0z" clip-rule="evenodd" />
                        </svg>
                        <%= req.translations.disable %>
                     <% } else { %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                           <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                        <%= req.translations.enable %>
                     <% } %>
                  </button>
               </form>
            </div>
         </div>
      </div>
   </div>
</main>

<style>
   @keyframes fade-in {
      from { opacity: 0; }
      to { opacity: 1; }
   }
   @keyframes slide-up {
      from { transform: translateY(20px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
   }
   @keyframes slide-down {
      from { transform: translateY(-20px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
   }
   @keyframes scale-in {
      from { transform: scale(0.95); opacity: 0; }
      to { transform: scale(1); opacity: 1; }
   }
   .animate-fade-in { animation: fade-in 0.4s ease-out forwards; }
   .animate-slide-up { animation: slide-up 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards; }
   .animate-slide-down { animation: slide-down 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards; }
   .animate-scale-in { animation: scale-in 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards; }
</style>

<script>
   document.addEventListener('DOMContentLoaded', function() {
      const useImageCheckbox = document.getElementById('useImage');
      const imageUploadBox = document.getElementById('imageUploadBox');
      const logoButton = document.getElementById('logoButton');
      const logoType = document.getElementById('logoType');
      
      useImageCheckbox.addEventListener('change', function() {
         if (this.checked) {
            imageUploadBox.classList.remove('hidden');
            logoButton.innerHTML = `
               <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M7.707 10.293a1 1 0 10-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 11.586V6h5a2 2 0 012 2v7a2 2 0 01-2 2H4a2 2 0 01-2-2V8a2 2 0 012-2h5v5.586l-1.293-1.293zM9 4a1 1 0 012 0v2H9V4z" />
               </svg>
               <%= req.translations.saveNewLogo %>
            `;
            logoButton.classList.remove('bg-red-600', 'hover:bg-red-500', 'focus:ring-red-500');
            logoButton.classList.add('bg-green-600', 'hover:bg-green-500', 'focus:ring-green-500');
            logoType.value = 'image';
         } else {
            imageUploadBox.classList.add('hidden');
            logoButton.innerHTML = `
               <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
               </svg>
               <%= req.translations.removeLogo %>
            `;
            logoButton.classList.remove('bg-green-600', 'hover:bg-green-500', 'focus:ring-green-500');
            logoButton.classList.add('bg-red-600', 'hover:bg-red-500', 'focus:ring-red-500');
            logoType.value = 'none';
         }
      });
      
      // File upload label update
      const fileInput = document.getElementById('logo');
      const fileUploadLabel = fileInput.nextElementSibling;
      
      fileInput.addEventListener('change', function() {
         if (this.files && this.files[0]) {
            const fileName = this.files[0].name;
            fileUploadLabel.querySelector('p').textContent = fileName;
         }
      });
   });
</script>
