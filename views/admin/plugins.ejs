                                                                <%- include('../components/admin_addons_template') %>
                                                                <main id="content" class="px-4 md:px-8 pt-4 pb-8">
                                                                  <div class="bg-transparent">
                                                                    <!-- Header Section -->
                                                                    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                                                                      <div>
                                                                        <h1 class="text-2xl font-bold text-white">Plugins Management</h1>
                                                                        <p class="mt-1 text-sm text-neutral-400">Manage all installed plugins and their configurations</p>
                                                                      </div>
                                                                      <div class="flex items-center gap-3">
                                                                        <button id="reload" type="button" 
                                                                          class="flex items-center gap-2 rounded-lg bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow hover:bg-indigo-700 transition-all focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
                                                                          onclick="reloadPlugins()">
                                                                          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                                                                          </svg>
                                                                          Reload Plugins
                                                                        </button>
                                                                      </div>
                                                                    </div>

                                                                    <!-- Stats Cards -->
                                                                    <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                                                                      <div class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 rounded-xl p-5 shadow border border-gray-700/50">
                                                                        <div class="flex items-center justify-between">
                                                                          <div>
                                                                            <p class="text-sm font-medium text-gray-400">Total Plugins</p>
                                                                            <p class="mt-1 text-2xl font-semibold text-white"><%= plugins.length %></p>
                                                                          </div>
                                                                          <div class="p-3 rounded-lg bg-indigo-600/20 text-indigo-400">
                                                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                                                            </svg>
                                                                          </div>
                                                                        </div>
                                                                      </div>

                                                                      <div class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 rounded-xl p-5 shadow border border-gray-700/50">
                                                                        <div class="flex items-center justify-between">
                                                                          <div>
                                                                            <p class="text-sm font-medium text-gray-400">Active Plugins</p>
                                                                            <p class="mt-1 text-2xl font-semibold text-white"><%= enabledPlugins.length %></p>
                                                                          </div>
                                                                          <div class="p-3 rounded-lg bg-green-600/20 text-green-400">
                                                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                                            </svg>
                                                                          </div>
                                                                        </div>
                                                                      </div>

                                                                      <div class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 rounded-xl p-5 shadow border border-gray-700/50">
                                                                        <div class="flex items-center justify-between">
                                                                          <div>
                                                                            <p class="text-sm font-medium text-gray-400">Inactive Plugins</p>
                                                                            <p class="mt-1 text-2xl font-semibold text-white"><%= plugins.length - enabledPlugins.length %></p>
                                                                          </div>
                                                                          <div class="p-3 rounded-lg bg-amber-600/20 text-amber-400">
                                                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                                                            </svg>
                                                                          </div>
                                                                        </div>
                                                                      </div>

                                                                      <div class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 rounded-xl p-5 shadow border border-gray-700/50">
                                                                        <div class="flex items-center justify-between">
                                                                          <div>
                                                                            <p class="text-sm font-medium text-gray-400">Last Updated</p>
                                                                            <p class="mt-1 text-xl font-semibold text-white">Just now</p>
                                                                          </div>
                                                                          <div class="p-3 rounded-lg bg-purple-600/20 text-purple-400">
                                                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                                            </svg>
                                                                          </div>
                                                                        </div>
                                                                      </div>
                                                                    </div>

                                                                    <!-- Plugins List -->
                                                                    <div class="mt-8 space-y-4">
                                                                      <div class="flex items-center justify-between">
                                                                        <h3 class="text-lg font-medium text-white">Installed Plugins</h3>
                                                                        <div class="relative">
                                                                          <input type="text" placeholder="Search plugins..." class="bg-gray-800/50 border border-gray-700 rounded-lg px-4 py-2 text-sm text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                                                                          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 absolute right-3 top-2.5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                                                          </svg>
                                                                        </div>
                                                                      </div>

                                                                      <div class="bg-gray-900/50 rounded-xl border border-gray-700/50 overflow-hidden">
                                                                        <% if (plugins.length === 0) { %>
                                                                          <div class="p-8 text-center">
                                                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
                                                                            </svg>
                                                                            <h4 class="mt-3 text-lg font-medium text-gray-300">No plugins installed</h4>
                                                                            <p class="mt-1 text-sm text-gray-500">Install plugins to extend your panel's functionality</p>
                                                                          </div>
                                                                        <% } else { %>
                                                                          <div class="divide-y divide-gray-800/50">
                                                                            <% plugins.forEach(function(plugin) { %>
                                                                              <div class="p-4 hover:bg-gray-800/30 transition-colors duration-200">
                                                                                <div class="flex items-center justify-between">
                                                                                  <div class="flex items-center space-x-4">
                                                                                    <div class="flex-shrink-0 p-2 bg-indigo-600/10 rounded-lg text-indigo-400">
                                                                                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z" />
                                                                                      </svg>
                                                                                    </div>
                                                                                    <div>
                                                                                      <h4 class="font-medium text-white flex items-center">
                                                                                        <span><%= plugin.name %></span>
                                                                                        <% if (enabledPlugins.some(pluginObj => pluginObj.name === plugin.name)) { %>
                                                                                          <span class="ml-2 px-2 py-0.5 text-xs rounded-full bg-green-600/20 text-green-400">Enabled</span>
                                                                                        <% } else { %>
                                                                                          <span class="ml-2 px-2 py-0.5 text-xs rounded-full bg-gray-600/20 text-gray-400">Disabled</span>
                                                                                        <% } %>
                                                                                      </h4>
                                                                                      <p class="text-sm text-gray-400 mt-1"><%= plugin.description || 'No description available' %></p>
                                                                                    </div>
                                                                                  </div>
                                                                                  <div class="flex items-center space-x-3">
                                                                                    <button onclick="location.href='/admin/plugins/<%= plugin.directoryname %>/edit'" class="text-gray-400 hover:text-white transition-colors p-2 rounded-lg hover:bg-gray-700/50">
                                                                                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                                                                      </svg>
                                                                                    </button>
                                                                                    <button onclick="togglePlugin('<%= plugin.name %>')" class="text-gray-400 hover:text-white transition-colors p-2 rounded-lg hover:bg-gray-700/50">
                                                                                      <% if (enabledPlugins.some(pluginObj => pluginObj.name === plugin.name)) { %>
                                                                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636a9 9 0 010 12.728m0 0l-2.829-2.829m2.829 2.829L21 21M15.536 8.464a5 5 0 010 7.072m0 0l-2.829-2.829m-4.243 2.829a4.978 4.978 0 01-1.414-2.83m-1.414 5.658a9 9 0 01-2.167-9.238m7.824 2.167a1 1 0 111.414 1.414m-1.414-1.414L3 3m8.293 8.293l1.414 1.414" />
                                                                                        </svg>
                                                                                      <% } else { %>
                                                                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                                                                                        </svg>
                                                                                      <% } %>
                                                                                    </button>
                                                                                  </div>
                                                                                </div>
                                                                              </div>
                                                                            <% }); %>
                                                                          </div>
                                                                        <% } %>
                                                                      </div>
                                                                    </div>
                                                                  </div>
                                                                </main>

                                                                <script>
                                                                  function togglePlugin(pluginName) {
                                                                    fetch(`/admin/plugins/${encodeURIComponent(pluginName)}/toggle`, {
                                                                      method: 'POST',
                                                                      headers: {
                                                                        'Content-Type': 'application/json',
                                                                      }
                                                                    }).then(response => {
                                                                      if (response.ok) {
                                                                        location.reload();
                                                                      } else {
                                                                        showNotification('Failed to toggle plugin', 'error');
                                                                      }
                                                                    }).catch(error => {
                                                                      showNotification('Network error while toggling plugin', 'error');
                                                                      console.error('Error:', error);
                                                                    });
                                                                  }

                                                                  function reloadPlugins() {
                                                                    fetch('/admin/plugins/reload', {
                                                                      method: 'POST',
                                                                      headers: {
                                                                        'Content-Type': 'application/json',
                                                                      }
                                                                    }).then(response => {
                                                                      if (response.ok) {
                                                                        showNotification('Plugins reloaded successfully', 'success');
                                                                        setTimeout(() => location.reload(), 1000);
                                                                      } else {
                                                                        showNotification('Failed to reload plugins', 'error');
                                                                      }
                                                                    }).catch(error => {
                                                                      showNotification('Network error while reloading plugins', 'error');
                                                                      console.error('Error:', error);
                                                                    });
                                                                  }

                                                                  function showNotification(message, type) {
                                                                    // Implement your notification system here
                                                                    console.log(`${type}: ${message}`);
                                                                    // Example: Toast notification or alert
                                                                    alert(`${type.toUpperCase()}: ${message}`);
                                                                  }
                                                                </script>